<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Products</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container my-4">
    <!-- Add New Product Button -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>All Products</h1>
      <a href="create" class="btn btn-success">Add New Product</a>
    </div>

    <!-- Products Table -->
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Brand</th>
            <th>Quantity</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% if (products.length > 0) { %>
            <% products.forEach((product, index) => { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= product.title %></td>
                <td><%= product.description %></td>
                <td>$<%= product.price.toFixed(2) %></td>
                <td><%= product.brand %></td>
                <td><%= product.quantity %></td>
                <td>
                  <a href="/admin/products/<%= product._id %>" class="btn btn-info btn-sm me-1">View</a>
                  <form action="/admin/products/<%= product._id %>?_method=DELETE" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No products found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
